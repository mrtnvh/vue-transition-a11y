{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/types"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**", "**/__mocks__/**", "**/*.spec.ts"]
}
