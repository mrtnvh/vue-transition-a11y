{
  "name": "vue-transition-a11y",
  "version": "1.0.0",
  "description": "Vue transition component with a11y considerations",
  "repository": "git@github.com:vanhoofmaarten/vue-transition-a11y.git",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vue",
    "typescript",
    "animation",
    "transition",
    "a11y",
    "accessibility",
    "prefers-reduce-motion"
  ],
  "source": "pkg/dist-src/index.js",
  "types": "pkg/dist-types/index.d.ts",
  "main": "pkg/dist-node/index.js",
  "module": "pkg/dist-web/index.js",
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "pika build",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:eslint": "eslint --fix src/**/*",
    "test": "run-s test:*",
    "test:lint": "eslint src/**/* && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest",
    "doc": "run-s doc:html && open-cli docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --exclude **/__mocks__/*.* --target ES6 --mode file --out docs --tsconfig tsconfig.prod.json",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --exclude **/__mocks__/*.* --target ES6 --mode file --json docs/typedoc.json --tsconfig tsconfig.prod.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
    "reset": "git clean -dfx && git reset --hard && npm ci",
    "clean": "rimraf pkg",
    "semantic-release": "semantic-release",
    "release": "run-s clean build test doc:html semantic-release doc:publish",
    "prepublishOnly": "run-s clean build test doc:html doc:publish"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "release": "One-step: clean, build, test, publish docs, and release a new version"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {},
  "devDependencies": {
    "@bitjson/npm-scripts-info": "1.0.0",
    "@bitjson/typedoc": "0.15.0-0",
    "@pika/pack": "0.5.0",
    "@pika/plugin-build-node": "0.9.2",
    "@pika/plugin-build-web": "0.9.2",
    "@pika/plugin-ts-standard-pkg": "0.9.2",
    "@semantic-release/changelog": "5.0.0",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@testing-library/vue": "5.0.2",
    "@types/jest": "25.1.4",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@vue/server-test-utils": "1.0.0-beta.32",
    "@vue/test-utils": "1.0.0-beta.32",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "7.2.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "3.1.2",
    "gh-pages": "2.2.0",
    "jest": "25.1.0",
    "npm-run-all": "4.1.5",
    "open-cli": "6.0.0",
    "prettier": "1.19.1",
    "semantic-release": "17.0.4",
    "ts-jest": "25.2.1",
    "typescript": "3.8.3",
    "vue": "2.6.11",
    "vue-server-renderer": "2.6.11",
    "vue-template-compiler": "2.6.11"
  },
  "peerDependencies": {
    "vue": "2.x"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.base.json"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "./tsconfig.base.json"
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "branches": ["master"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./scripts/prepare.sh"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): v<%= nextRelease.version %>",
          "assets": ["CHANGELOG.md", "package.json", "yarn.lock"]
        }
      ]
    ]
  },
  "renovate": {
    "assignees": [
      "vanhoofmaarten"
    ],
    "automerge": true,
    "schedule": "before 3am on Monday",
    "extends": [
      "config:base",
      "group:allNonMajor",
      ":semanticCommitTypeAll(chore)"
    ],
    "npm": {
      "commitMessageTopic": "{{prettyDepType}} {{depName}}"
    }
  }
}
